{
  "short_name": "Kanjidex",
  "name": "Kanjidex",
  "version": "3.0",
  "manifest_version": 2,
  "description": "A simple extension for looking up kanji characters.",
  "author": "seekwhence",
  "icons": {
    "16": "./icons/icon_16.png",
    "32": "./icons/icon_32.png",
    "48": "./icons/icon_48.png",
    "128": "./icons/icon_128.png"
  },
  "browser_action": {
    "default_icon": "./icons/browser_icon.png",
    "default_title": "Kanjidex",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["./background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content.js"]
    }
  ],
  "permissions": [
    "<all_urls>",
    "*://*.jisho.org/*",
    "*://*/*",
    "http://*/",
    "https://*/",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "tabs"
  ]
}
